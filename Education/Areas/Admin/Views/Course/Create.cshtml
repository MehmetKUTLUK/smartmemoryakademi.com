
@model Course

@{
    ViewData["title"] = "Kurs Ekleme";
}
<h2>
    @ViewData["title"]
</h2>
<div class="card">
    <div class="card-body">

        <form method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" placeholder="Kurs Adını Yazınız">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="VideoName"></label>
                <input class="form-control" asp-for="VideoName" placeholder="Video Adınız yazınız">
                <span asp-validation-for="VideoName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="CourseDuration"></label>
                <input class="form-control" asp-for="CourseDuration" placeholder="Kurs Süresiniz yazınız">
                <span asp-validation-for="CourseDuration"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="CategoryId"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                </select>
                <span asp-validation-for="CategoryId"></span>
            </div>
            <div class="mb-3">
                <label for="LogoFile" class="form-label" asp-for="CourseLogo"></label>
                <input class="form-control" type="file" id="LogoFile" name="LogoFile">

            </div>
            <div class="mb-3">
                <label for="CourseVideoFile" class="form-label" asp-for="CourseVideoFile"></label>
                <input class="form-control" type="file" id="CourseVideoFile" name="CourseVideoFile">

            </div>

          


            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a class="btn btn-link" asp-action="Index">İptal</a>

        </form>

    </div>

</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />





    }


